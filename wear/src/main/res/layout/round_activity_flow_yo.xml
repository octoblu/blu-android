    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlowYo"
    tools:deviceIds="wear_round">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refreshContainer"
        android:layout_width="match_parent"
